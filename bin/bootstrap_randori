#!/usr/bin/env python

import os
import sys

script_directory = os.path.dirname(os.path.realpath(__file__))
root_directory = os.path.join(script_directory, '..')

def main():
    os.system('ansible-playbook -i {0}/hosts {0}/bootstrap/playbooks/site.yml'.format(root_directory))

if __name__ == '__main__':
    sys.exit(main())
